<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Register your device"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
        <TextView
            android:id="@+id/serial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Serial Number"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    <TextView
        android:id="@+id/serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WNFJDJJJG345RT"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/serial_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/imei_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="IMEI Number"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/serial_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/imei_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="034558575744345"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imei_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/model_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Phone Model"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imei_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/phone_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5033f"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/model_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <Button
        android:id="@+id/register_device"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/logout_btn"
        app:layout_constraintTop_toBottomOf="@+id/phone_model" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/purple_light"
        app:layout_constraintLeft_toRightOf="@+id/register_device"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_model" />


</androidx.constraintlayout.widget.ConstraintLayout>